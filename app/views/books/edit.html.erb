<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

<label for="book_title">Title</label>
<%= f.text_field :title %>

<label for="book_opinion">Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<% end %>

<%= link_to 'Show', book_path(@book) %>
<%= link_to 'Back', books_path(@books) %>