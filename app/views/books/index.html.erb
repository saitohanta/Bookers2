<h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>


<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>

<div>
  <%#= image_tag book.get_image %>
</div>


<h2>New book</h2>
  <%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>


<% @books.each do |book| %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(current_user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
        </td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
</table>
<% end %>
