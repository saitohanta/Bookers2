<h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>


<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>


<h2>New book</h2>
  <%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>



<h2>Book detail</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(current_user.id) do %>
        <%= image_tag @books.user.get_profile_image(100,100) %><br>
        <%= link_to current_user.name, user_path(@user) %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(@books.id) do %>
        <%= @books.title %>
        <% end %>
      </td>
      <td><%= @books.body %></td>
      <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
      <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    </tr>
  </tbody>
</table>
