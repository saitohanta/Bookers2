<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <%= link_to 'Bookers', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user) do %>
                <i class="fas fa-home" style="color: #ffffff;"></i> <span class="text-light">Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to  users_path do %>
                <i class="fas fa-users" style="color: #ffffff;"></i>  <span class="text-light">Users</span>
                <% end %>
              </li>
              <li>
                <%= link_to books_path do %>
                <i class="fas fa-book-open" style="color: #ffffff;"></i>  <span class="text-light">Books</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt" style="color: #ffffff;"></i> <span class="text-light">Log out</span>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path do %>
                <i class="fas fa-home" style="color: #ffffff;"></i> <span class="text-light">Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to about_path do %>
                <i class="fas fa-link" style="color: #ffffff;"></i> <span class="text-light">About</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus" style="color: #ffffff;"></i>  <span class="text-light">Sign up</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt" style="color: #ffffff;"></i>  <span class="text-light">Log in</span>
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>